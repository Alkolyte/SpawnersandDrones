<?xml version="1.0" encoding="utf-8" ?>
<Defs>
      <!-- Scrappie Spawner -->
  <ThingDef ParentName="SpawnerBase">
      <defName>ScrappieAssembler</defName>
      <label>scrappie drone assembler</label>
      <description>An ancient ultratech security system that passively creates security drones. \nThis assembler periodically fabricates scrappie drones with rudimentary vanometric technology and materials seemingly synthesized from the atmosphere. \n\nScrappies are a scout class drone that carry close range shrapnel cannons which can scatter onto multiple enemies.</description>
      <graphicData>
        <texPath>Things/Building/Spawner/Spawner_scout</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <drawSize>(1.75, 1.75)</drawSize>
        <shadowData>
          <volume>(1.5, 1.0, 0.2)</volume>
          <offset>(0.0, 0.0, 0.0)</offset>
        </shadowData>
      </graphicData>
      <costList>
        <Plasteel>25</Plasteel>
        <Steel>200</Steel>
        <ComponentSpacer>6</ComponentSpacer>
      </costList>
      <comps>
        <li Class="CompProperties_SpawnerPawn">
          <spawnablePawnKinds>
            <li>Drone_Scrappie</li>
          </spawnablePawnKinds>
          <chooseSingleTypeToSpawn>True</chooseSingleTypeToSpawn>
          <nextSpawnInspectStringKey>MechAssemblyCompleteIn</nextSpawnInspectStringKey>
          <maxSpawnedPawnsPoints>500</maxSpawnedPawnsPoints>
          <spawnSound>Drone_Spawn</spawnSound>
          <lordJob>LordJob_AssaultColony</lordJob>
          <pawnSpawnIntervalDays>1.5</pawnSpawnIntervalDays>
          <showNextSpawnInInspect>true</showNextSpawnInInspect>
        </li>
        <li Class="CompProperties_Glower">
          <glowRadius>3</glowRadius>
          <glowColor>(187,44,0,0)</glowColor>
        </li>
      </comps>
    </ThingDef>

